<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SportPlanner.Views.ItemDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="Time:" FontSize="Medium" />
        <Label Text="{Binding TimeOfDay}" FontSize="Small"/>
        <Label Text="Attending:" FontSize="Medium"/>
        <ListView ItemsSource="{Binding Event.UsersAttending}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Label Text="{Binding .}" 
                            LineBreakMode="NoWrap" 
                            Style="{DynamicResource ListItemTextStyle}" 
                            FontSize="13" />
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
        <Button Text="{Binding AttendButtonText}" Command="{Binding AttendCommand}"/>
    </StackLayout>

</ContentPage>